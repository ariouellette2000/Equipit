<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ouellette.equipit">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <activity android:name=".Settings"
            android:label="Equipit - Settings"/>
        <activity android:name=".Edit"
            android:label="Equipit - Edit"/>
        <activity android:name=".Add"
            android:label="Equipit - Add Item"/>
        <activity android:name=".Details"
            android:label="Equipit - Details"/>
        <activity android:name=".Category"
            android:label="Equipit - Category"/>
        <activity android:name=".Product"
            android:label="Equipit - Product"/>
        <activity android:name=".MainActivity"
            android:label="Equipit - Home">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>